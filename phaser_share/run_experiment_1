#!/usr/bin/env zsh
REST=$@

rosrun phaser_ros phaser_ros \
    --alsologtostderr=1 \
    --v=3 \
		--enable_debug=true \
		--registration_algorithm="sph-opt" \
		--datasource="ply" \
		--PlyReadDirectory="/home/berlukas/Documents/PhD/research/2019/Spherical Registration/ply/exp1/" \
    --app_mode="experiment1" \
    --truth_file="/home/berlukas/Documents/PhD/research/2019/Spherical Registration/ply/exp1/ground_truth.txt" \
		--phaser_core_spherical_bandwidth=101 \
		--phaser_core_spherical_zero_padding=50 \
		--phase_n_voxels=105 \
		--phase_discretize_lower=-50 \
		--phase_discretize_upper=50 \
    --gaussian_peak_neighbors=0 \
    --bingham_peak_neighbors=0 \
    --z_score_filter_threshold=0.01 \
    --z_score_lag_max=3 \
    --z_score_threshold=3.0 \
    $REST
