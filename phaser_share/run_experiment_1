#!/usr/bin/env zsh
REST=$@

rosrun phaser_ros phaser_ros \
    --alsologtostderr=1 \
    --v=3 \
		--enable_debug=true \
		--registration_algorithm="sph" \
		--datasource="ply" \
		--PlyReadDirectory="/home/berlukas/Documents/workspace/phaser_ws/src/packlo/phaser_experimental/phaser_prototype/ply/exp1/" \
    --app_mode="experiment1" \
    --truth_file="/home/berlukas/Documents/workspace/phaser_ws/src/packlo/phaser_experimental/phaser_prototype/ply/exp1/ground_truth.txt" \
		--spherical_bandwith=81 \
		--phase_n_voxels=50 \
		--phase_discretize_lower=-50 \
		--phase_discretize_upper=50 \
    --gaussian_peak_neighbors=0 \
    --bingham_peak_neighbors=0 \
    --z_score_filter_threshold=0.01 \
    --z_score_lag_max=3 \
    --z_score_threshold=3.0 \
    $REST
