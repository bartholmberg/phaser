#!/usr/bin/env zsh
REST=$@

rosrun phaser_ros phaser_ros \
    --alsologtostderr=1 \
    --v=3 \
		--enable_debug=true \
		--registration_algorithm="sph-opt" \
		--datasource="ply" \
		--PlyReadDirectory="/home/berlukas/Documents/ply_datasets/phaser_v2/exp/" \
    --app_mode="experiment1" \
    --truth_file="/home/berlukas/Documents/ply_datasets/phaser_v2/exp/ground_truth.txt" \
    --gaussian_peak_neighbors=0 \
    --bingham_peak_neighbors=0 \
    --z_score_filter_threshold=0.01 \
    --z_score_lag_max=3 \
    --z_score_threshold=3.0 \
    $REST
