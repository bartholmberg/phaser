#!/usr/bin/env zsh
REST=$@

rosrun phaser_ros phaser_ros \
    --alsologtostderr=1 \
    --v=3 \
		--enable_debug=true \
		--registration_algorithm="sph-mock-cutted" \
		--datasource="ply" \
		--PlyReadDirectory="/home/berlukas/Documents/workspace/phaser_ws/src/packlo/phaser_experimental/phaser_prototype/ply/test-exp/" \
		--spherical_bandwith=231 \
		--phase_n_voxels=301 \
		--phase_discretize_lower=-150 \
		--phase_discretize_upper=150 \
    --gaussian_peak_neighbors=0 \
    --bingham_peak_neighbors=0 \
    --z_score_filter_threshold=0.4 \
    --z_score_lag_max=15 \
    --z_score_threshold=3.0 \
    $REST
