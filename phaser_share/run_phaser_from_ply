#!/usr/bin/env zsh
REST=$@

rosrun phaser_ros phaser_ros \
    --alsologtostderr=1 \
    --v=3 \
		--enable_debug=true \
		--registration_algorithm="sph" \
		--datasource="ply" \
		--PlyReadDirectory="/home/berlukas/Documents/ply_datasets/arche1/" \
		--spherical_bandwith=211 \
		--phase_n_voxels=282 \
		--phase_discretize_lower=-70 \
		--phase_discretize_upper=70 \
    --gaussian_peak_neighbors=0 \
    --bingham_peak_neighbors=0 \
    --z_score_filter_threshold=0.01 \
    --z_score_lag_max=5 \
    --z_score_threshold=3.0 \
    $REST
